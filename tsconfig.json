{
  "include": ["./bin/**/*.js", "./lib/**/*.js"],
  "exclude": ["./lib/**/*.test.js", "./types/**/*"],
  "compilerOptions": {
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    // This compiler run should
    // only output d.ts files
    "emitDeclarationOnly": true,
    "outDir": "types",
    "declarationMap": true,
    "skipLibCheck": true
  }
}
